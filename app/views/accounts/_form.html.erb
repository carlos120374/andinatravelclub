<%= form_for @account, :html => { :class => "form-horizontal" } do |f| %>
  <% if @account.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@account.errors.count, "error") %> prohibited this account from being saved:</h2>

      <ul>
      <% @account.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="row">
  
</div>
  <div class="control-group">
    <%= f.label :name %>
    <div class="controls">
    <%= f.text_field :name, :class => "input-xxlarge" %>  
    </div>
  </div>
  <div class="control-group">
    <%= f.label :email %>
    <div class="controls">
    <%= f.text_field :email, :class => "input-xxlarge" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :password, "Password" %>
    <div class="controls">
      <%= f.text_field :password, :class => "input-xxlarge" %>
    </div>
  </div>
  <div class="actions" style="margin-left: 160px;">
    <%= f.submit :class => "btn btn-primary" %>
    <a href="/accounts" class="btn">Cancelar</a>
  </div>
<% end %>
